<% form_for(@page) do |f| %>
  <p><%= f.label :slug %>
    <%= f.text_field :slug %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, :size => '40x8' %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>

<%= markdown_cheat %>

<% end %>
