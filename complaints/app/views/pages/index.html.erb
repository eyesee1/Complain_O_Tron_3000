<h1>Listing pages</h1>
<table class='grid pageList'>
  <tr>
    <th>URL Slug</th>
    <th>Title</th>
    <th>Content</th>
  </tr>
<% for page in @pages %>
  <tr>
    <td><%=h page.slug %></td>
    <td><%=h page.title %></td>
    <td><%=h truncate page.content %></td>
    <td class='itemOptions'><%= link_to 'Show', page %></td>
    <td class='itemOptions'><%= link_to 'Edit', edit_page_path(page) %></td>
    <td class='itemOptions'><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete, :class => 'action destroy' %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New page', new_page_path %>
