<%= markdown_cheat %>
<%= error_messages_for :faq %>

<% form_for(@faq) do |f| %>
  <p>
    <b>Question</b><br />
    <%= f.text_area :question, :size => '40x5' %>
  </p>

  <p>
    <b>Answer</b><br />
    <%= f.text_area :answer, :size => '40x5' %>
  </p>



  <p>
    <%= f.submit button %>
  </p>
<% end %>